restart;
with(LinearAlgebra):

# Define matrices
MatrixA := Matrix([[2, 4, 1], [3, 0, -1], [5, 2, 3]]);
MatrixB := Matrix([[1, -1, 0], [0, 2, 3], [4, 1, -2]]);

# Display matrices
MatrixA;
MatrixB;

# Compute sum
SumAB := MatrixA + MatrixB;

# Compute product
ProductAB := MatrixMatrixMultiply(MatrixA, MatrixB);

# Check if Matrix A is invertible
Determinant(MatrixA);

# If determinant â‰  0, find inverse
InverseA := Inverse(MatrixA);